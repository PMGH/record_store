<form id="edit_artist" action="/big_als/artists/<%= @artist.id() %>/edit" method="GET">
  <label for="artistName">Artist: </label>
  <input type="text" name="name" id="artistName" value="<%= @artist.name() %>">

  <form action="/big_als/artists/<%= @artist.id() %>/edit" method="POST">
    <input type="submit" value="Amend Details">
  </form>

  <form action="/big_als/artists/<%= @artist.id() %>/delete" method="POST">
    <input type="submit" value="Delete Artist" class="btn btn--delete">
  </form>

</form>
